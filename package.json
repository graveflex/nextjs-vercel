    "@payloadcms/ui": "3.0.0-beta.97",
    "@refract-ui/core": "1.0.1-alpha.46",
    "@refract-ui/sc": "1.0.1-alpha.46",
    "@refract-ui/stories": "1.0.1-alpha.46",
    "@refract-ui/hook-fields": "1.0.1-alpha.46",
    "@storybook/addon-a11y": "8.3.0-alpha.4",
