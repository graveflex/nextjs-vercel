    "@vitest/coverage-v8": "latest",
    "vercel": "^37.1.2",
    "vite-plugin-dts": "latest",
    "vite-plugin-environment": "latest",
    "vite-plugin-svgr": "latest",
    "vite-transform-stub": "latest",
    "vite-tsconfig-paths": "latest",
    "vitest": "latest"
  },
  "resolutions": {
    "@payloadcms/db-postgres": "3.0.0-beta.97",
