{
  "name": "web",
  "description": "GFX Monorepo Web App",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf -- ./.turbo ./dist ./coverage",
    "dev": "export $(grep -e '^NEXT_PORT' -- ../../.env) && next dev -p ${NEXT_PORT}",
    "build": "export $(grep -e '^LOCAL' -- ../../.env) && if [ \"$LOCAL\" != \"true\" ]; then next build && payload migrate; else next build; fi",
    "start": "export $(grep -e '^NEXT_PORT' -- ../../.env) && next start -p ${NEXT_PORT}",
    "lint": "eslint . --ext js,jsx,ts,tsx --fix",
    "generate:types": "payload generate:types",
    "setup": "./bin/init_db.sh"
  },
  "dependencies": {
    "@payloadcms/bundler-webpack": "^1.0.5",
    "@payloadcms/db-mongodb": "^1.2.0",
    "@payloadcms/db-postgres": "^0.2.1",
    "@payloadcms/next-payload": "^0.1.11",
    "@payloadcms/plugin-cloud-storage": "^1.1.1",
    "@payloadcms/richtext-slate": "^1.3.1",
    "@vercel/blob": "^0.16.1",
    "drizzle-orm": "^0.29.1",
    "next": "^13.5.4",
    "payload": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "settings": "*",
    "styled-components": "^6.0.0-beta.11",
    "theme": "*",
    "ui": "*",
    "vercel-blob-storage": "*"
  },
  "devDependencies": {
    "@storybook/testing-react": "^2.0.1",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^18.17.14",
    "@types/react": "18.2.21",
    "@types/react-dom": "^18.2.7",
    "eslint-config-custom": "*",
    "tsconfig": "*",
    "typescript": "^5.2.2"
  }
}
