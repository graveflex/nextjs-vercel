{
  "name": "@mono/web",
  "description": "GFX Monorepo Web App",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf -- ./.turbo ./dist ./coverage ./node_modules",
    "dev": "export $(grep -e '^NEXT_PORT' -- ../../.env) && next dev -p ${NEXT_PORT}",
    "build": "export $(grep -e '^LOCAL' -- ../../.env) > /dev/null && if [ \"$LOCAL\" != \"true\" ]; then next build; else next build; fi",
    "start": "export $(grep -e '^NEXT_PORT' -- ../../.env) && next start -p ${NEXT_PORT}",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "types": "tsc --noEmit --skipLibCheck",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "generate:types": "payload generate:types",
    "migrations:create": "payload migrate:create",
    "migrations:run": "if [ \"$CI\" != \"true\" ]; then payload migrate; fi",
    "setup": "./bin/init_db.sh"
  },
  "dependencies": {
    "@mono/settings": "*",
    "@mono/theme": "*",
    "@mono/ui": "*",
    "@payloadcms/db-postgres": "latest",
    "@payloadcms/live-preview": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/plugin-cloud-storage": "latest",
    "@payloadcms/richtext-lexical": "latest",
    "@payloadcms/ui": "latest",
    "@refract-ui/hook-fields": "latest",
    "@refract-ui/sc": "latest",
    "@storybook/react": "^8.0.4",
    "@svgr/webpack": "^8.1.0",
    "@vercel/blob": "^0.16.1",
    "@vercel/speed-insights": "^1.0.9",
    "drizzle-orm": "^0.29.1",
    "escape-html": "^1.0.3",
    "graphql-playground-middleware-express": "^1.7.23",
    "next": "latest",
    "next-intl": "^3.11.1",
    "payload": "latest",
    "payload-cloud-storage-vercel-adapter": "^0.1.5",
    "qs": "^6.11.2",
    "react": "latest",
    "react-dom": "latest",
    "sharp": "0.32.6",
    "styled-components": "latest",
    "tinycolor2": "^1.6.0",
    "@faker-js/faker": "^8.4.0",
    "@mono/tsconfig": "*",
    "@mono/types": "*",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.0.0",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^18.17.14",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@vitejs/plugin-react": "^4.2.1",
    "dotenv": "^16.4.5",
    "eslint-config-custom": "*",
    "typescript": "latest",
    "vite-plugin-svgr": "^4.2.0",
    "vite-transform-stub": "^1.0.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vitest-canvas-mock": "^0.3.3"
  }
}
