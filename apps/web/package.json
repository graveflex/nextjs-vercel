{
  "name": "@mono/web",
  "description": "GFX Monorepo Web App",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf -- ./.turbo ./dist ./coverage ./node_modules",
    "dev": "export $(grep -e '^NEXT_PORT' -- ../../.env) && next dev -p ${NEXT_PORT}",
    "build": "export $(grep -e '^LOCAL' -- ../../.env) > /dev/null && if [ \"$LOCAL\" != \"true\" ]; then next build && yarn migrations:run; else next build; fi",
    "start": "export $(grep -e '^NEXT_PORT' -- ../../.env) && next start -p ${NEXT_PORT}",
    "lint": "eslint . --ext js,jsx,ts,tsx --fix",
    "types": "tsc --noEmit --skipLibCheck",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "generate:types": "payload generate:types",
    "migrations:create": "payload migrate:create",
    "migrations:run": "if [ \"$CI\" != \"true\" ]; then payload migrate; fi",
    "setup": "./bin/init_db.sh"
  },
  "dependencies": {
    "@mono/settings": "*",
    "@mono/theme": "*",
    "@mono/ui": "*",
    "@payloadcms/bundler-webpack": "^1.0.5",
    "@payloadcms/db-postgres": "^0.2.1",
    "@payloadcms/live-preview": "^0.2.2",
    "@payloadcms/next-payload": "^0.1.11",
    "@payloadcms/plugin-cloud-storage": "^1.1.1",
    "@payloadcms/richtext-slate": "^1.3.1",
    "@refract-ui/sc": "1.0.1-alpha.38",
    "@storybook/react": "^8.0.4",
    "@vercel/blob": "^0.16.1",
    "@vercel/speed-insights": "^1.0.9",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "escape-html": "^1.0.3",
    "graphql-playground-middleware-express": "^1.7.23",
    "next": "14.1.4",
    "payload": "^2.4.0",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "0.32.6",
    "slate": "^0.101.5",
    "styled-components": "^6.1.8",
    "vercel-blob-storage": "*"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@mono/tsconfig": "*",
    "@storybook/react": "^8.0.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.0.0",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^18.17.14",
    "@types/react": "18.2.70",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "dotenv": "^16.4.5",
    "eslint-config-custom": "*",
    "typescript": "^5.4.3",
    "vite-plugin-svgr": "^4.2.0",
    "vite-transform-stub": "^1.0.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vitest-canvas-mock": "^0.3.3"
  }
}
