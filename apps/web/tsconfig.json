{
  "extends": "@mono/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@mono/web/*": [
        "./src/*"
      ],
      "@payload-config": ["./payload.config.ts"]
    },
    "strictNullChecks": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "payload.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/migrations"
  ]
}
