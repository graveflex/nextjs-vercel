{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "globalEnv": [
    "PGUSER",
    "PGDATABASE",
    "PROJECT_NAME",
    "AUTO_LOGIN",
    "NEXT_PORT",
    "DOCS_PORT",
    "LOCAL",
    "MONGODB_URI",
    "PAYLOAD_SECRET",
    "VERCEL_GIT_PULL_REQUEST_ID",
    "VERCEL_GIT_COMMIT_REF",
    "VERCEL_DOMAIN_URL",
    "VERCEL_BRANCH_URL",
    "SERVER_URL",
    "IS_PREVIEW",
    "PORT",
    "MONGODB_URI",
    "BLOB_READ_WRITE_TOKEN",
    "BLOB_ENDPOINT_URL",
    "BLOB_STORE_ID",
    "GOOGLE_TRANSLATE_API_KEY",
    "DATABASE_URL",
    "NODE_ENV",
    "SMTP_HOST",
    "SMTP_USER",
    "SMTP_PASS",
    "GITHUB_REPO",
    "GITHUB_TOKEN",
    "NEON_API_KEY",
    "NEON_PROJECT_ID",
    "AUTH_SECRET",
    "AUTH_GITHUB_ID",
    "AUTH_GITHUB_SECRET",
    "RESEND_API_KEY",
    "RESEND_FROM_ADDRESS",
    "RESEND_FROM_NAME"
  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "setup": {
      "cache": false
    },
    "db:cli": {
      "cache": false,
      "interactive": true
    },
    "db:migrate": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "//#lint": {},
    "//#lint:fix": {
      "cache": false
    },
    "//#test": {},
    "types": {},
    "//#test:watch": {},
    "//#test:coverage": {
      "outputs": ["coverage/**"]
    },
    "migrations:create": {},
    "migrations:run": {},
    "generate:types": {
      "cache": false
    },
    "@mono/web#payload": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^generate:types"],
      "persistent": true,
      "interactive": false
    },
    "dev:stories": {
      "cache": false,
      "persistent": true,
      "interactive": false
    },
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".vercel/output/**"]
    },
    "build:stories": {},
    "start": {
      "dependsOn": ["^start"],
      "outputs": []
    },
    "seed:all": {}
  }
}
