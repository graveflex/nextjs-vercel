{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "setup": {
      "cache": false,
      "dependsOn": ["@mono/settings#buildSettings"]
    },
    "clean": {},
    "//lint": {},
    "//lint:fix": {
      "cache": false
    },
    "test": {},
    "types": {},
    "test:watch": {},
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "migrations:create": {},
    "migrations:run": {},
    "buildSettings": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "generate:types": {
      "cache": false,
      "dependsOn": ["@mono/settings#setup-dev"]
    },
    "@mono/settings#setup-dev": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^generate:types"],
      "persistent": true,
      "interactive": true
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "PROJECT_NAME",
        "AUTO_LOGIN",
        "NEXT_PORT",
        "DOCS_PORT",
        "LOCAL",
        "MONGODB_URI",
        "PAYLOAD_SECRET",
        "VERCEL_GIT_PULL_REQUEST_ID",
        "VERCEL_GIT_COMMIT_REF",
        "VERCEL_DOMAIN_URL",
        "VERCEL_BRANCH_URL",
        "VERCEL_URL",
        "IS_PREVIEW",
        "PORT",
        "MONGODB_URI",
        "BLOB_READ_WRITE_TOKEN",
        "BLOB_ENDPOINT_URL",
        "BLOB_STORE_ID",
        "GOOGLE_TRANSLATE_API_KEY",
        "FORCE_WEB_URL",
        "DATABASE_URL",
        "NODE_ENV",
        "SMTP_HOST",
        "SMTP_USER",
        "SMTP_PASS"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^start"],
      "outputs": []
    }
  }
}
